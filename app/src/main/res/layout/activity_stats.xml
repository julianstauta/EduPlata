<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@color/cardview_light_background">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="491dp"
        android:src="@drawable/stats" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="15dp">
        <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Consejos:"
        android:textSize="30dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/verdeperron"
            android:layout_marginBottom="5dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Como tus deudas no son tan altas podrias comezar a invertir o iniciar un plan de ahorros."
                android:textSize="20dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/rojoperron">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Podrias reducuir costsos en alimentacion ya que estan representando un muy alto porcentaje de los gastos."
                android:textSize="20dp"/>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>